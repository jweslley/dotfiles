startup_message off

altscreen on
defscrollback 30000

hardstatus off
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{=kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B}%Y-%m-%d %{W}%c %{g}]'

# Default screens
# screen -t NameOfScreen ScreenNumber ShellCommand
#screen -t shell1 0
#screen -t shell2 1

# Start at window 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1
