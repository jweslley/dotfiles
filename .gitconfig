[github]
  user = jweslley
  ;token = !getpass github.token

[user]
  name = Jonhnny Weslley
  email = jw@jonhnnyweslley.net

[core]
  trustctime = false
  excludesfile = ~/.gitignore
  editor = vim.basic -c startinsert

;[init]
  ;templatedir = ~/.git_template

[branch]
  autosetupmerge = true
  autosetuprebase = local

[merge]
  tool = vimdiff

[rerere]
  enabled = 1

[help]
  autocorrect = 1

[clean]
  requireForce = true

[format]
  ;pretty = %C(yellow)%h%Creset -%C(bold red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset

[color]
  ui = auto

[color "diff"]
  plain = normal dim
  meta = yellow dim
  frag = blue bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  header = normal dim
  added = green
  changed = yellow
  untracked = cyan

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[alias]
  b = branch
  d = diff
  h = help
  co = checkout

  # git add and the staging area
  a = number add
  aa = add --all
  ap = add --patch
  ad = !git rm $(git ls-files -d)   # add deleted
  ac = !git add $(git ls-files -m)  # add changed/modified
  au = !git add $(git ls-files -o --exclude-standard) # add unstaged
  p = diff --cached          # patch
  ps = diff --cached --stat  # patch stat
  di = diff --word-diff      # diff inline

  # commits
  ci = commit -m
  ca = commit --all -m
  amend = commit --amend

  # status and history
  s = number
  l = log --graph --format='%C(yellow)%h%Creset -%C(bold red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  lc = log ORIG_HEAD.. --stat --no-merges

  # merging
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim -p `f`"
  add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"

  # misc
  vi = number -vi

  # underused
  hard = reset --hard
  soft = reset --soft
  pop  = reset --soft HEAD^
  last = cat-file commit HEAD
