[github]
  user = jweslley
  ;token = !getpass github.token

[user]
  name = Jonhnny Weslley
  email = jw@jonhnnyweslley.net

[core]
  trustctime = false
  excludesfile = ~/.gitignore
  editor = vim.basic -c startinsert

;[init]
  ;templatedir = ~/.git_template

[branch]
  autosetupmerge = true
  autosetuprebase = local

[merge]
  tool = vimdiff

[rerere]
  enabled = 1

[help]
  autocorrect = 1

[clean]
  requireForce = true

[format]
  ;pretty = %C(yellow)%h%Creset -%C(bold red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset

[color]
  ui = auto

[color "diff"]
  plain = normal dim
  meta = yellow dim
  frag = blue bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  header = normal dim
  added = green
  changed = yellow
  untracked = cyan

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[alias]
  b = branch
  co = checkout
  ci = commit -m
  d = diff
  f = fetch --prune
  h = help
  k = cherry-pick
  r = remote
  sm = submodule

  # git add and the staging area
  a = add
  aa = add --all
  ap = add --patch
  ad = !git rm $(git ls-files -d)   # add deleted
  ac = !git add $(git ls-files -m)  # add changed/modified
  au = !git add $(git ls-files -o --exclude-standard) # add unstaged
  p = diff --cached          # patch
  ps = diff --cached --stat  # patch stat
  di = diff --word-diff      # diff inline

  # status
  s = number
  lc = log ORIG_HEAD.. --stat --no-merges
  l = log --graph --format='%C(yellow)%h%Creset -%C(bold red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'

  # commits and history
  ca = commit --all -m
  amend = commit --amend
  pop = reset --soft HEAD^
  hard = reset --hard
  soft = reset --soft
  scrap = checkout HEAD

  # merging
  gitkconflict = !gitk --left-right HEAD...MERGE_HEAD
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim -p `f`"
  add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"

  # misc
  v = number -vi
  deploy = push production master

  # underused
  last = cat-file commit HEAD
  rank = shortlog -sn --no-merges
  whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
  whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
