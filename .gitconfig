[user]
  name = Jonhnny Weslley
  email = jw@jonhnnyweslley.net

[core]
  trustctime = false
  excludesfile = /home/jonhnny/.gitignore

[branch]
  autosetuprebase = local

[merge]
  tool = vimdiff

[rerere]
  enabled = 1

[help]
  autocorrect = 1

[clean]
  requireForce = true

[format]
  ;pretty = %C(yellow)%h%Creset -%C(bold red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset

[color]
  ui = auto
  sh = auto

[color "diff"]
  plain = normal dim
  meta = yellow dim
  frag = blue bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  header = normal dim
  added = green
  changed = yellow
  untracked = cyan

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "sh"]
  branch = yellow
  workdir = blue
  dirty = red

[alias]
  s = status
  l = log --graph --format='%C(yellow)%h%Creset -%C(bold red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  lc = log ORIG_HEAD.. --stat --no-merges
  amend = commit --amend
  staged = diff --cached
  index = diff --cached
  last = cat-file commit HEAD
  au = !git add $(git ls-files -o --exclude-standard)
  addm = !git add $(git ls-files -m)
  ad = !git rm $(git ls-files -d)
  gitkconflict = !gitk --left-right HEAD...MERGE_HEAD
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim -p `f`"
  add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
  rank = shortlog -sn --no-merges
  whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
  whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
  co = checkout
	deploy = push production master
