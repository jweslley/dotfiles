!-------------------------------------------------------------------------------
! Mixed from:
!   https://gist.github.com/yevgenko/1167205
!   https://github.com/nh2/dotfiles/blob/master/.Xdefaults
!
!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi: 132
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.autohint: true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault


!-------------------------------------------------------------------------------
! xpdf
!-------------------------------------------------------------------------------
xpdf*enableFreetype:    yes
xpdf*antialias:         yes
xpdf*foreground:        black
xpdf*background:        white
xpdf*urlCommand:        /usr/bin/chromium %s


!-------------------------------------------------------------------------------
! xscreensaver
!-------------------------------------------------------------------------------
!font settings
xscreensaver.Dialog.headingFont:        -*-dina-bold-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.bodyFont:           -*-dina-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.labelFont:          -*-dina-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.unameFont:          -*-dina-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.buttonFont:         -*-dina-bold-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.Dialog.dateFont:           -*-dina-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.passwd.passwdFont:         -*-dina-bold-r-*-*-12-*-*-*-*-*-*-*
!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #ffffff
xscreensaver.Dialog.background:         #111111
xscreensaver.Dialog.topShadowColor:     #111111
xscreensaver.Dialog.bottomShadowColor:  #111111
xscreensaver.Dialog.Button.foreground:  #666666
xscreensaver.Dialog.Button.background:  #ffffff
!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #666666
xscreensaver.Dialog.text.background:    #ffffff
xscreensaver.Dialog.internalBorderWidth:24
xscreensaver.Dialog.borderWidth:        0
xscreensaver.Dialog.shadowThickness:    2
!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #ff0000
xscreensaver.passwd.thermometer.background:  #000000
xscreensaver.passwd.thermometer.width:       8
!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat: %I:%M%P %a %b %d, %Y

!
!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
!   http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.termName: rxvt-unicode

URxvt.depth: 32
URxvt.geometry: 90x30
URxvt.transparent: false
!URxvt.transparent:true
!URxvt.shading:40
URxvt.fading: 0
URxvt.urgentOnBell: true
!URxvt.visualBell: true
URxvt.loginShell: true
URxvt.saveLines: 32767
URxvt.internalBorder: 3
URxvt.lineSpace: 0

! Fonts
! run "fc-list" for a list of available fonts
URxvt.font: xft:Ubuntu Mono:size=14
URxvt.boldFont: xft:Ubuntu Mono:bold:size=14

! Fix font space
URxvt.letterSpace: -1

! Font sizes
URxvt.keysym.C-0: command:\033]710;xft:Ubuntu Mono:size=14\007\033]711;xft:Ubuntu Mono:bold:size=14\007
URxvt.keysym.C-plus: command:\033]710;xft:Ubuntu Mono:size=24\007\033]711;xft:Ubuntu Mono:bold:size=24\007
URxvt.keysym.C-equal: command:\033]710;xft:Ubuntu Mono:size=48\007\033]711;xft:Ubuntu Mono:bold:size=48\007
URxvt.keysym.C-minus: command:\033]710;xft:Ubuntu Mono:size=9\007\033]711;xft:Ubuntu Mono:bold:size=9\007

! Scrollbar
URxvt.scrollBar: false
URxvt.scrollStyle: rxvt
URxvt.scrollTtyOutput: false
URxvt.scrollTtyKeypress: true
URxvt.scrollWithBuffer: true

! Cursor
URxvt.cursorBlink: true
URxvt.cursorColor: #657b83
URxvt.cursorUnderline: false

! Pointer
URxvt.pointerBlank: true

! Colors
URxvt.colorIT: #87af5f
URxvt.colorBD: #d7d7d7
URxvt.colorUL: #86a2be

! Perl extensions
URxvt.perl-lib: /usr/lib/urxvt/perl/
URxvt.perl-ext-common: default,matcher,-option-popup,-selection-popup,-readline,-tabbed
URxvt.matcher.button: 1
URxvt.matcher.pattern.1:  \\B(/\\S+?):(\\d+)(?=:|$)
URxvt.matcher.launcher.1: urxvt-vim +$2 $1
URxvt.matcher.pattern.2:  \\s{2}(.*)\\s\\((.*)\\)\\s(\\S+?):(\\d+)(?=:|$)
URxvt.matcher.launcher.2: gem-editor $1 $2 $3 $4
URxvt.matcher.pattern.3:  ([0-9a-f]{6,40})
URxvt.matcher.launcher.3: urxvt-git-show $1
URxvt.url-launcher: chromium
URxvt.keysym.M-Delete: perl:matcher:list
URxvt.searchable-scrollback: C-s


