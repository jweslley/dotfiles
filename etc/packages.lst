# add-apt-repository $1
# add-apt-repository $2
# apt-get update
[sources]
  apt = "ppa:jd-team/jdownloader"


# apt-get install $*
[apt]
  internet = xul-ext-notify xchat jdownloader curl
  media = flashplugin-installer moonlight-plugin-mozilla vlc soundconverter gstreamer0.10-ffmpeg gstreamer0.10-fluendo-mp3 gstreamer0.10-plugins-ugly gstreamer0.10-plugins-ugly-multiverse gstreamer0.10-plugins-bad
  screencast = gtk-recordmydesktop mencoder
  webcam = camorama
  dvd = libdvdread4
  music = lilypond
  games = fretsonfire
  learning = gbrainy gnaural mnemosyne anki
  desktop = comix tomboy gnome-do specto stellarium lyx abntex graphviz dia meld
  compression = unace rar unrar zip unzip p7zip-full p7zip-rar sharutils aish uudeview mpack lha arj cabextract file-roller zoo lzop
  statistics = r-recommended revolution-r r-cran-gplots r-cran-car r-cran-vcd r-cran-colorspace r-cran-latticeextra r-cran-getopt littler

  # Development
  git = git-core git-doc git-svn gitk gitstats
  vim = vim vim-gnome vim-doc vim-scripts ctags ncurses-term
  shell = ack-grep xclip terminator htop pv tree python-pygments openssh-server libnotify-bin colordiff
  ruby = ruby libruby ruby-dev rubygems rdoc rake libsqlite3-ruby
  java = openjdk-6-jdk openjdk-6-source icedtea6-plugin
  database = sqlite3 sqlitebrowser


# sbaz install $1
[scala]
  docs = scala-devel-docs scala-documentation


# gem install $*
[ruby]
  shell = bcat cheat ronn heroku
  irb = interactive_editor wirble hirb looksee awesome_print
  web = rails devise inherited_resources has_scope responders rails-footnotes-linux
  test = rspec ruby-debug reek


# easy_install $1
[python]
  shell = frogstarb stats_tools


# install.packages($1)
[R]
  main = corrgram


[manual]
  gui = eclipse rstudio
  dev = maven scala sbt
  engine = android google_appengine hadoop
