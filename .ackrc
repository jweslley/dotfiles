######################################################################
# General Settings                                                   #
######################################################################

--follow
--group
--sort-files
--smart-case

--color
--color-filename=magenta
--color-match=bold red

--pager=less -FRX

######################################################################
# Type Settings                                                      #
######################################################################

--type-add=ruby:ext:slim,haml,rabl,builder
--type-add=ruby:is:Gemfile

--type-add=js:ext:json,coffee

--type-add=css:ext:sass,scss

--type-add=markup:ext:md,mdown,markdown,mkdn,textile,rst,txt

--type-add=csv:ext:csv,tsv

--type-add=gettext:ext:pot,po

# types to ignore by default
--nogettext

--ignore-directory=.bundle
--ignore-directory=tmp
